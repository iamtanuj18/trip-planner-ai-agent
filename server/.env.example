# Copy this file to .env and fill in your values.

# AWS region where Bedrock is enabled on your account
AWS_REGION=ap-southeast-2

# AWS credentials — use an IAM user or role that has bedrock:InvokeModel permission.
# If you are running locally with ~/.aws/credentials already configured, you can
# leave these blank and boto3 will pick them up automatically.
AWS_ACCESS_KEY_ID=your-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-secret-access-key-here

# Amazon Nova Lite — no access approval needed, supports tool use, cheap and fast
BEDROCK_MODEL_ID=us.amazon.nova-lite-v1:0

# Max /plan calls allowed per day — resets at midnight Melbourne time
MAX_DAILY_REQUESTS=50

# Max /plan calls allowed per month — resets on the 1st Melbourne time
MAX_MONTHLY_REQUESTS=500
